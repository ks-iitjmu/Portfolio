<script>
    document.addEventListener("DOMContentLoaded", function () {
        const menuButton = document.getElementById("menu-button");
        const sideMenu = document.getElementById("side-menu");
        const hamburgerIcon = document.getElementById("hamburger-icon");
        const closeIcon = document.getElementById("close-icon");
        const navLinks = document.querySelectorAll(".nav-link");

        if (!menuButton || !sideMenu || !hamburgerIcon || !closeIcon) return;

        function toggleMenu() {
            if (!sideMenu || !hamburgerIcon || !closeIcon) return;

            const isOpen = !sideMenu.classList.contains("translate-x-full");

            if (isOpen) {
                sideMenu.classList.add("translate-x-full");
                hamburgerIcon.classList.remove("hidden");
                closeIcon.classList.add("hidden");
            } else {
                sideMenu.classList.remove("translate-x-full");
                hamburgerIcon.classList.add("hidden");
                closeIcon.classList.remove("hidden");
            }
        }

        menuButton.addEventListener("click", toggleMenu);
        navLinks.forEach((link) => link.addEventListener("click", toggleMenu));

        document.addEventListener("keydown", function (event) {
            if (
                event.key === "Escape" &&
                sideMenu &&
                !sideMenu.classList.contains("translate-x-full")
            ) {
                toggleMenu();
            }
        });

        document.addEventListener("click", function (event) {
            const isMenuOpen = !sideMenu.classList.contains("translate-x-full");

            if (isMenuOpen && event.target instanceof Node) {
                const isClickInsideMenu = sideMenu.contains(event.target);
                const isClickOnMenuButton = menuButton.contains(event.target);

                if (!isClickInsideMenu && !isClickOnMenuButton) {
                    toggleMenu();
                }
            }
        });
    });
</script>
