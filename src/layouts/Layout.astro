---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-transparent bg-white min-h-screen">
		<!-- Galaxy Background -->
		<div class="galaxy-bg">
			<div class="deep-space"></div>
			<div class="stars"></div>
			<div class="enhanced-stars"></div>
			<div class="cosmic-dust"></div>
			<div class="nebula"></div>
			<div class="shooting-stars">
				<div class="shooting-star"></div>
				<div class="shooting-star"></div>
				<div class="shooting-star"></div>
			</div>
		</div>

		<!-- Main Content -->
		<div class="relative z-10">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>

<style>
	:root {
		color-scheme: light dark;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overflow-x: hidden;
	}

	/* Ensure galaxy background is always visible */
	.galaxy-bg {
		opacity: 1 !important;
	}

	/* Enhance visibility in dark mode */
	.dark .galaxy-bg {
		opacity: 1 !important;
	}

	/* Reduce opacity slightly in light mode for readability */
	:not(.dark) .galaxy-bg {
		opacity: 0.7 !important;
	}

	/* Enhance text readability */
	.dark {
		color: rgba(255, 255, 255, 0.9);
	}
</style>
